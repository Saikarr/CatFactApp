@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p class="lead">Request a cat fact and save it to a file</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                <strong>Error:</strong> @Model.ErrorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success" role="alert">
                <strong>Success:</strong> @Model.SuccessMessage
            </div>
        }

        <div class="card">
            <div class="card-header">
                <h3>Request a new cat fact</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <label for="MaxLength" class="form-label">Maximum fact length (optional)</label>
                            <input asp-for="MaxLength" type="number" class="form-control" id="MaxLength"
                                   placeholder="eg. 100" min="20" max="1000">
                            <div class="form-text">Leave empty for random length</div>
                            <span asp-validation-for="MaxLength" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 text-center">
                            <button type="submit" asp-page-handler="GetCatFact" class="btn btn-primary btn-lg">
                                🎲 Request a random cat fact
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @if (Model.CurrentCatFact != null)
        {
            <div class="card mt-4">
                <div class="card-header">
                    <h4>📝 Latest cat fact</h4>
                </div>
                <div class="card-body">
                    <blockquote class="blockquote">
                        <p class="mb-0">@Model.CurrentCatFact.Fact</p>
                    </blockquote>
                    <div class="mt-3">
                        <span class="badge bg-info">Length: @Model.CurrentCatFact.Length signs</span>
                        @if (Model.MaxLength.HasValue)
                        {
                            <span class="badge bg-warning">Limit: max @Model.MaxLength signs</span>
                        }
                        <span class="badge bg-success">Saved to the file: catfacts.txt</span>
                    </div>
                </div>
            </div>
        }

    </div>
</div>